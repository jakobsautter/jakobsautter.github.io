        "@types/jsdom": "^21.1.7",
        "@types/node": "^24.0.2",
        "@vitejs/plugin-vue": "^5.2.4",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.5.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.28.0",
        "eslint-plugin-vue": "^10.2.0",
        "jsdom": "^26.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "sass": "^1.89.1",
        "sass-loader": "^16.0.5",
        "typescript": "~5.8.3",
        "unplugin-icons": "^22.1.0",
        "unplugin-vue-components": "^28.7.0",
        "vite": "^6.3.5",
        "vitest": "^3.1.3",
        "vue-tsc": "^2.2.10"
